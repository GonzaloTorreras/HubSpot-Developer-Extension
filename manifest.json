{
	"manifest_version": 2,
	"name": "HubSpot Developer Extension ",
	"version": "0.1",
	"description": "A HubSpot Developers Sidekick Extension",
	"permissions": ["declarativeContent", "storage"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"cookies",
		"storage"
	],
	"content_scripts": [{
		"run_at" :"document_end", //"run_at" tells when to load the javascript,
		"js": ["jquery-3.2.1.min.js","design-manager.js"], //"js" tells all .js files to inject,
	    "css": [ "hs-dark-ide.css" ], //"CSS" tells about all included CSS files for injection.
	    "document_idle": "document_start",
	    "matches": [ "\u003Call_urls>" ] //"matches" tells the URL to match to inject the code which I'm using Gmail here,
    }],
    "options_page": "options.html",
		"background": {
			"persistent": false,
			"scripts": [ "hot-reload.js" ]
		}
}