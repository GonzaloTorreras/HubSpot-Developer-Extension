{
	"manifest_version": 2,
	"name": "__MSG_extName__",
	"version": "1.03.2",
	"default_locale":"en",
	"description": "__MSG_extDesc__",
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "HubSpot Dev Tools",
		"default_icon": "icon.png"
	},
	"permissions": [
		"storage",
		"activeTab",
		"contextMenus"
	],
	"optional_permissions": [
	 "https://app.hubspot.com/*",
	 "https://app.hubspotqa.com/*"
	],
	"web_accessible_resources": [
		"mac-text-cursor.svg",
		"mac-text-cursor.png"
	],
	"content_scripts": [{
		"run_at" :"document_idle", 
		"js": ["jquery-3.2.1.min.js","design-manager.js"], 
	    "css": [ "hsDarkIde.css" ],  
	    "document_idle": "document_start",
	    "matches": [ "https://app.hubspot.com/*", "https://app.hubspotqa.com/*" ] 
	},
	{
		"run_at" :"document_idle", 
		"js": ["jquery-3.2.1.min.js","clipboard.min.js"], 
		"css": [ "json-formatter.css" ],  
		"document_idle": "document_start",
		"matches": [ "*://*/__context__/*" ]
	}],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "options_page": "options.html",
	"background": {
		"persistent": false,
		"scripts": [ "hot-reload.js","jquery-3.2.1.min.js","json-formatter.js" ]
	}
}